{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "declaration": true,
    "lib": [
      "es2015",
      "dom",
      "es2017.object",
      "esnext.asynciterable"
    ],
    "baseUrl": "src"
  },
  "exclude": [
    "./__tests__",
    "./__ssr_tests__"
  ]
}
